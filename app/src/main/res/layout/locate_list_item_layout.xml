<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/locate_exp_list_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingEnd="?android:attr/expandableListPreferredChildIndicatorRight"
        android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="5dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/locate_exp_list_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingEnd="?android:attr/expandableListPreferredChildIndicatorRight"
        android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="5dp"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@id/locate_exp_list_item_image" />

    <TextView
        android:id="@+id/locate_exp_list_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingEnd="?android:attr/expandableListPreferredChildIndicatorRight"
        android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="5dp"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@id/locate_exp_list_item_image"
        app:layout_constraintTop_toBottomOf="@id/locate_exp_list_item_location" />

</android.support.constraint.ConstraintLayout>